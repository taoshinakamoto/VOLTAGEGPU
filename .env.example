# VoltageGPU API Configuration
# Copy this file to .env and configure with your values

# Application Settings
APP_NAME=VoltageGPU
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=production

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost/voltagegpu
REDIS_URL=redis://localhost:6379/0

# External API Configuration (Backend Provider)
BACKEND_API_URL=https://api.backend-provider.com/v1
BACKEND_API_KEY=your-backend-api-key

# Pricing Configuration (85% markup)
PRICING_MARKUP=1.85

# Stripe Payment
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_PERIOD=60

# Monitoring
SENTRY_DSN=
PROMETHEUS_ENABLED=True

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@voltagegpu.com

# AWS Configuration (for S3 storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=voltagegpu-assets

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/voltagegpu.log
